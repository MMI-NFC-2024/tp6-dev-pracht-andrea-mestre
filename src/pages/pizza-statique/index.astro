---
import Layout from "../../layouts/Layout.astro";
import pizza from "../../assets/pizza.json";
const categories = [...new Set(pizza.map((p) => p.category))].sort();
---

<Layout>
    <h1 class="text-4xl font-bold mb-4 text-gray-900">
      Explorer les cat√©gories de pizzas (Rendu Statique)
    </h1>
    <p class="text-lg text-gray-600 mb-8">
      Cliquez sur une cat√©gorie pour voir ses statistiques et graphiques d√©taill√©s
    </p>

    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {categories.map((c) => {
        const categoryData = pizza.filter((p) => p.category === c);
        const orderCount = categoryData.length;
        return (
          <a
            href={`/pizza-statique/${c}`}
            class="block bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 p-6 border-2 border-green-200 hover:border-green-400"
          >
            <div class="flex items-center justify-between mb-3">
              <h2 class="text-2xl font-bold text-gray-800">{c}</h2>
              <span class="text-4xl">üçï</span>
            </div>
            <p class="text-gray-600 mb-2">
              <span class="font-semibold">{orderCount}</span> commandes
            </p>
            <div class="flex items-center text-green-600 font-semibold mt-4">
              <span>Voir les d√©tails</span>
              <svg 
                class="w-5 h-5 ml-2" 
                fill="none" 
                stroke="currentColor" 
                viewBox="0 0 24 24"
              >
                <path 
                  stroke-linecap="round" 
                  stroke-linejoin="round" 
                  stroke-width="2" 
                  d="M9 5l7 7-7 7"
                />
              </svg>
            </div>
          </a>
        );
      })}
    </div>

    <div class="mt-12 bg-gradient-to-r from-green-50 to-teal-50 rounded-lg p-8">
      <h2 class="text-2xl font-bold mb-6 text-gray-800">Statistiques globales</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div>
          <p class="text-sm text-gray-600 mb-1">Total de commandes</p>
          <p class="text-4xl font-bold text-green-600">{pizza.length}</p>
        </div>
        <div>
          <p class="text-sm text-gray-600 mb-1">Cat√©gories diff√©rentes</p>
          <p class="text-4xl font-bold text-teal-600">{categories.length}</p>
        </div>
        <div>
          <p class="text-sm text-gray-600 mb-1">Types uniques</p>
          <p class="text-4xl font-bold text-emerald-600">
            {[...new Set(pizza.map((p) => p.name))].length}
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
</Layout>
